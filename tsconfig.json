{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module":"commonjs",
        "lib": ["es2015", "es2016", "es2017", "dom", "es2015.promise"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "generator/dist/types",
        "outDir": "generator/compiled",
        "typeRoots": [
          "node_modules/@types"
        ],
        "skipLibCheck": true
    },
    "include": [
      "generator"
    ],
    "exclude": [
      "generated"
    ]
}
